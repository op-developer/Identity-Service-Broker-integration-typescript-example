{
  "name": "demo-service-provider",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "start": "node ./dist/index.js",
    "build": "npm-run-all build:*",
    "build:ts": "tsc",
    "build:templates": "cp -r src/templates dist/templates",
    "build:locales": "cp -r src/locales dist/locales",
    "build:scss": "sass src/scss/style.scss dist/public/style.css",
    "develop": "npm-run-all --parallel develop:*",
    "develop:ts": "nodemon --ext ts,hbs --watch src --exec ts-node -- ./src/index.ts",
    "develop:scss": "npm run build:scss && npm run build:scss -- --watch",
    "develop:locales": "nodemon --ext json --watch src/locales --exec npm run -- build:locales"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "7.0.3",
    "@hapi/yar": "11.0.2",
    "@types/hapi__inert": "5.2.10",
    "@types/hapi__vision": "5.5.8",
    "@types/hapi__yar": "10.1.6",
    "@types/i18next-node-fs-backend": "2.1.5",
    "@types/node": "22.10.1",
    "@types/uuid": "10.0.0",
    "checkout-logger": "github:Heikkohoo/checkout-logger#fc310d2a9be21db85ee0078288b3d6d588f39300",
    "crypto-random-string": "^3.3.1",
    "handlebars": "^4.7.8",
    "i18next": "^23.16.8",
    "i18next-fs-backend": "2.6.0",
    "joi": "17.13.3",
    "node-jose": "^2.2.0",
    "nodemon": "3.1.7",
    "npm-run-all": "^4.1.5",
    "sass": "^1.82.0",
    "ts-node": "10.9.2",
    "typescript": "^5.7.2",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "eslint-plugin-functional": "^7.1.0",
    "globals": "^15.13.0",
    "typescript-eslint": "^8.17.0"
  }
}
